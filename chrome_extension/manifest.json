{
	"manifest_version": 2,
	"name": "FakeBlock",
	"version": "1.0",
	"description": "A chrome plugin to prevent Facebook users from becoming misinformed by their news feed by obscuring posts determined to be fake news.",
	"icons": {
		"128": "icons/",
		"48": "icons/",
		"16": "icons/"
	},

	"page_action": {
		"icon": "icons/",
		"default_popup": "html/popup.html",
		"default_title": "FakeBlock"
	},

	"background": {
		"scripts": [
			"js/events.js"
		],
		"persistent": false
	},

	"content_scripts": [
		{
			"matches": "fb url",
			"js": ["js/content.js", "js/jquery341.js"],
			"css": ["css/"]
		}
	],

	"options_page": "html/options.html",

	"permissions": [
		"tabs",
		"contextMenus",
		"notifications",
		"fb url"
	]
}